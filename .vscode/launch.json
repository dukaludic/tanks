  "version": "0.2.0",
  "configurations": [
    {
      "name": "Client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/client/src/index.ts",
      "outFiles": ["${workspaceRoot}/client/public/bundle.js"],
      "sourceMaps": true
    },
    {
      "restart": false,
      "name": "Server",
      "args": ["run", "debug"],
      "runtimeExecutable": "npm",
      "request": "launch",
      "port": 13257,
      "type": "node",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}/server"
    }
  ]
}
